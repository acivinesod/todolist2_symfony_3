{% extends 'base.html.twig' %}

{% block body %}
<h2 class="page-header"> Latest Todos</h2>
<table class="table table-striped">
    <thead>
    <tr>
        <th>#</th>
        <th>Todo</th>
        <th>Due Date</th>
        <th></th>
    </tr>
    </thead>
    <tbody>

    {% for todo in todos  %}


    <tr>
        <th scope="row">{{ todo.id }}</th>
        <td>{{ todo.name }}</td>
        <td><i class="fa fa-calendar" aria-hidden="true"></i>{{ todo.dueDate |date (" d/m/Y  ")}}<i class="fa fa-clock-o" aria-hidden="true"></i>{{ todo.dueDate |date (" G:i")}}</td>

        <td>
            <a href="/details/{{ todo.id }}" class="btn btn-success">View</a>
            <a href="/edit/{{ todo.id }}" class="btn btn-default">Edit</a>
            <a href="/delete/{{ todo.id }}" class="btn btn-danger">Delete</a>
        </td>
    </tr>
    {% endfor %}
    </tbody>
</table>

{% endblock %}
